<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#ffcc3445"
    tools:context="com.example.android.navigationdrawerexample.FullscreenTriggerActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#ffe5b3b5"
        android:textStyle="bold" android:textSize="100sp" android:gravity="center"
        android:text="0:50 ms"
        android:layout_marginTop="-238sp"/>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">



        </LinearLayout>


        <ImageButton
            android:layout_width="163dp"
            android:layout_height="176dp"
            android:id="@+id/imageButton2"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="right|bottom"
            android:src="@drawable/ok"/>

        <ImageButton
            android:layout_width="161dp"
            android:layout_height="175dp"
            android:id="@+id/imageButton3"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="left|bottom"
            android:src="@drawable/notok"/>


    </FrameLayout>

</FrameLayout>
